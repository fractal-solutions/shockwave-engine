{
  "name": "shockwave",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "engine",
    "editor",
    "runtime-app"
  ],
  "scripts": {
    "build": "bun --cwd packages/ecs tsc && bun --cwd packages/math tsc && bun --cwd packages/utils tsc && bun --cwd packages/csg tsc && bun --cwd packages/gpgpu tsc && bun --cwd engine tsc",
    "dev:editor": "bun --cwd editor vite",
    "start:runtime": "bun --cwd runtime-app vite"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vitejs/plugin-react": "^5.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.4.21",
    "cannon-es": "^0.20.0",
    "monaco-editor": "^0.52.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-resizable-panels": "^3.0.4",
    "tailwindcss": "^4.1.12",
    "three": "^0.179.1",
    "vite": "^7.1.2"
  }
}
